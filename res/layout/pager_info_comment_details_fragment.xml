<?xml version="1.0" encoding="utf-8"?>
<!-- 评价详情页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_top_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="#000000" >
        
           <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/photo_arrow_l" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="云宿评价"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rl_top_title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="@drawable/main_bg"
            android:orientation="vertical" >

            <RelativeLayout
            android:id="@+id/rl_nick_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="8dp"
            android:orientation="horizontal" >

             <RelativeLayout
                android:id="@+id/rl_acount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:orientation="vertical" >    
                
	            <ImageView
	                android:id="@+id/user_info_head_avatar"
	                android:layout_width="80dp"
	                android:layout_height="80dp"
	                android:layout_alignParentLeft="true"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="8dip"
	                android:layout_marginTop="20dip"
	                android:src="@drawable/friends" />
            </RelativeLayout>
            
              <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/rl_acount"
                 android:layout_marginRight="10dip"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_layout"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
	                
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_text_name"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="海湾名宿"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                    

                    

                </RelativeLayout>

               <RelativeLayout
                   android:layout_below="@id/rl_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="5dip"
	                android:layout_marginBottom="10dip"
	                 android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_text1"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                        android:text="海景双人房102"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    
<!-- 			 <RatingBar -->
<!-- 	            android:id="@+id/ratingBar" -->
<!-- 	             android:layout_toRightOf="@id/tv_text1" -->
<!-- 	            style="@style/small_ratingbar" -->
<!-- 	            android:layout_width="wrap_content" -->
<!-- 	            android:layout_height="wrap_content" -->
<!-- 	             android:layout_centerVertical="true" -->
<!-- 	            android:max="5" -->
<!-- 	            android:numStars="5" -->
<!-- 	            android:rating="2" -->
<!-- 	            android:stepSize="1.0" /> -->
                    

                </RelativeLayout>
                
                </RelativeLayout>

            

        </RelativeLayout>
        
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginBottom="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_textcomment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="综合评价"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/small_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_marginLeft="20dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_textcomment"
                    android:max="5"
                    android:numStars="5"
                    android:rating="2"
                    android:stepSize="1.0" />
            </RelativeLayout>
        
            
            
            <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:layout_marginTop="2dip"
	    android:background="@color/danhuise">
	</LinearLayout>    
    
          
           <RelativeLayout
         android:id="@+id/rl_feak"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_bg"
                android:clickable="true" >

                <EditText 
				    android:id="@+id/et_idea"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_margin="10dip"
				    android:maxLength="500"
				    android:minHeight="100dip"
				    android:hint="请输入您对云宿的评价"
				    android:layout_gravity="center"
				    android:textSize="15sp"
				    android:background="@drawable/edit_bg"
				    android:maxLines="6"
				    android:minLines="6"
				    android:gravity="top"/>
                
                
               
            </RelativeLayout>
        
           <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="8dip"
            android:clickable="true" >

           <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                 android:hint="提交评价"
                 android:textSize="17sp"
                android:textColorHint="@color/write"
            android:background="@drawable/exit_login" 
            
            
               
            />
        </RelativeLayout>    
           
          
        </LinearLayout>
    </ScrollView>

</RelativeLayout>