<?xml version="1.0" encoding="utf-8"?>
<!-- 个人订单管理页面 (列表) -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/rl_acount_manager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_bg"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/user_info_head_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="20dip"
            android:src="@drawable/friends" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dip"
            android:layout_toRightOf="@+id/user_info_head_avatar"
            android:orientation="vertical" >

             <RelativeLayout
                android:id="@+id/rl_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="海灣民宿101室宿101室..."
                    android:textColor="@color/black"
                    android:textSize="16sp" />

<!--                 <TextView -->
<!--                     android:id="@+id/name" -->
<!--                     android:layout_width="wrap_content" -->
<!--                     android:layout_height="wrap_content" -->
<!--                     android:layout_toRightOf="@id/tv_text" -->
<!--                     android:singleLine="true" -->
<!--                     android:text="猫尾巴猫尾巴猫尾..." -->
<!--                     android:textColor="@color/black" -->
<!--                     android:textSize="15sp" /> -->
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rl_layout1"
                android:layout_below="@id/rl_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="2dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="民宿星級："
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/small_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_text1"
                    android:max="5"
                    android:numStars="5"
                    android:rating="2"
                    android:stepSize="1.0" />
            </RelativeLayout>

             <RelativeLayout
                android:id="@+id/rl_layout2"
                android:layout_below="@id/rl_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="2dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="订单编号："
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_text"
                    android:singleLine="true"
                    android:text="1002003"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>
            
              <RelativeLayout
                android:id="@+id/rl_layout3"
                android:layout_below="@id/rl_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="2dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="订单价格："
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_text"
                    android:singleLine="true"
                    android:text="2000元"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_layout3"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="2dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="入住日期："
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_acount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dip"
                android:src="@drawable/right_arrow_style" />
               
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_text1"
                    android:layout_toLeftOf="@id/iv_acount"
                    android:singleLine="true"
                    android:text="2014-02-04"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_below="@id/rl_acount_manager"
	    android:layout_width="fill_parent"
	    android:layout_height="1dip"
	    android:layout_marginTop="2dip"
	    android:background="@color/danhuise">
	</LinearLayout>

</RelativeLayout>